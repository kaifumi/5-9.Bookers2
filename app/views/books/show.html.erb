<div class="container">
<div class="row">
<%= render 'books/list', books: @books %>

<div class="col-xs-9">
	<h2>Book detail</h2>
  <table class="table table-striped">

    <tbody>
        <tr>
		      <td><%= link_to attachment_image_tag @book.user,:profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg" ,size:'50x50'%><br>
          <%=link_to @book.user.name ,user_path(@book.user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if user_signed_in? && @book.user_id==current_user.id %>
          <td><%= link_to "Edit",edit_book_path(@book) %></td>
          <td><%= link_to "Destroy",book_path(@book),method: :delete %></td>
          <% end %>
        </tr>       
    </tbody>
  </table>
</div>
</div>
</div>